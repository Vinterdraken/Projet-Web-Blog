<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="container col-lg-6">

                    <div class="archive">
                        <div class="archive-title">{{ title }}</div>
                        <article class="archive-content">

                            <p class="archive-text">{{ content }}</p>

                            <sub class="archive-quote">{{ date }}</sub>

                            <div class="dropdown-divider"></div>

                            <div class="row">
                                <div class="col-lg-8"></div>

                                <div class="col-lg-1" id="likeCounterIcon">
                                    <span class="oi oi-heart"></span>
                                </div>
                                <div class="col-lg-1" id="likeCounterIconText">
                                    <p>50</p>
                                </div>
                                <div class="col-lg-1" id="likeCounterIcon">
                                    <span class="oi oi-envelope-closed"></span>
                                </div>
                                <div class="col-lg-1" id="likeCounterIconText">
                                    <p>7</p>
                                </div>
                            </div>
                        </article>

                        <div class="dropdown-divider"></div>

                        <div class="container comment-group">
                            <h4 class="h4 comment">COMMENTAIRES</h4>
                            <ul>
                                {% for comment in comments %}
                                    {% if id  ==  comment.getPostId() %}
                                        {% if "true" == comment.getVerification() %}
                                            <li>
                                                <div class="comment-author">{{ comment.getAuthor() }}</div>

                                                <div class="comment-content">{{ comment.getContent() }}</div>

                                                <div class="archive-quote"><sub>{{ comment.getDate() }}</sub></div>

                                                <div class="dropdown-divider"></div>
                                            </li>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="dropdown-divider"></div>

                        <div class="container">
                            <div class="editArticle">
                                <form class="form-comment" action="{{ postByUrl }}" method="post">
                                    <div class="form-group">
                                        <label for="FormControlInput1">AUTEUR</label>
                                        <textarea type="text" class="form-control" id="FormControlInput1" rows="1" name="author"></textarea>
                                    </div>

                                    <div class="dropdown-divider"></div>

                                    <div class="form-group">
                                        <label for="FormControlTextarea1">CONTENT</label>
                                        <textarea class="form-control" id="FormControlTextarea1" rows="5" name="content"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn" type="submit">Valider</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </div>
</div>
